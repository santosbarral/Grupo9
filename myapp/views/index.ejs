<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('./partials/head') %>

	<body>
		<% if (locals.user !=undefined) { %>
			<%- include("./partials/headerLogueado")%>
				<%} else{ %>
					<%- include('./partials/header') %>
						<% }%>

							<!-- Banner -->
							<div class="banner">
								<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
							</div>
							<!-- /Banner -->

							<!-- Novedades -->
							<div class="container products-wrapper">
								<div class="row">
									<div class="col-12">
										<h2 class="products-title">Productos</h2>
									</div>

									<% for( let i=0; i < listaProductos.length; i++ ) { %>

										<!-- Show the "ultimos" products -->
										<div class="col-12 col-sm-6 col-lg-3">
											<section class="product-box">
												<a href="/product/id/<%= listaProductos[i].id %> ">
													<figure class="product-box_image">
														<img src="../images/products/<%= listaProductos[i].productImg %>"
															alt="<%= listaProductos[i].productName %>">
													</figure>
													<article class="product-box_data">
														<h2>
															<%= listaProductos[i].productName %>
														</h2>
														<p>
															<%= listaProductos[i].productDescription %>
														</p>
														<p>Comentarios: 12</p>
													</article>
												</a>

											</section>
										</div>
									<% } %>
											<!-- footer -->
											<%- include('./partials/footer') %>
												<!-- /footer -->
	</body>

</html>